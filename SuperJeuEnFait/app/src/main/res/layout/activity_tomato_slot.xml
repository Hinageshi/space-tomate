<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TomatoSlotActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewSlot"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/harvest"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/textViewSlotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textViewSlotLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textViewSlotShoots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/textViewLevelPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/buttonBuyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD ONE LEVEL"
        android:backgroundTint="@color/tomato"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/textViewShootPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/buttonBuyShoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD ONE SHOOT"
        android:backgroundTint="@color/tomato"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

</LinearLayout>